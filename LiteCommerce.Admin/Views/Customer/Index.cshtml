
@{ ViewBag.Title = "Quản lý khách hàng";
}
<!-- Form để tìm kiếm -->
<div class="container-fluid">
    <form method="get" action="~/Customer/Index">
        <div class="input-group">
            <input name="searchValue" type="text" class="form-control" placeholder="Nhập tên cần tìm...">
            <div class="input-group-btn">
                <button class="btn btn-primary" type="submit">
                    <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                </button>
            </div>
        </div>
    </form>
</div>
<!-- Danh sách nhà cung cấp -->
<div class="container-fluid">
    <div class="text-left">
        <p>Có tất cả <strong>1,024</strong> nhà cung cấp. Bạn đang ở trang <strong>1</strong> trên tổng số <strong>15</strong> trang.</p>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Tên khách hàng</th>
                <th>Tên liên lạc</th>
                <th>Địa chỉ</th>
                <th>Thành phố</th>
                <th>Mã vùng</th>
                <th>Quốc gia</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th class="text-right">
                    <a href="~/Customer/Add" class="btn btn-xs btn-primary">
                        <i class="fa fa-plus"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 10; i++)
            {
            <tr>
                <td>Nord-Ost-Fisch Handelsgesellschaft mbH</td>
                <td>Sven Petersen</td>
                <td>Frahmredder 112a</td>
                <td>Cuxhaven</td>
                <td>27478</td>
                <td>Germany</td>
                <td>tt@gmail.com</td>
                <td>(04721) 8713</td>
                <td class="text-right">
                    <a href="~/Customer/Edit/1234" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>

@model LiteCommerce.DomainModels.Employee

<form method="post" action="~/Employee/Save">
    <div class="text-danger form-group">
        @Html.ValidationSummary()
    </div>
    @Html.HiddenFor(m => m.EmployeeID)
    <div class="form-group">
        <label>Họ:</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @autofocus = "autofocus" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</div>
    </div>
    <div class="form-group">
        <label>Tên:</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</div>
    </div>
    <div class="form-group">
        <label>Ngày Sinh:</label>
        @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.BirthDate)</div>
    </div>
    <div class="form-group">
        <label>Ảnh:</label>
        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.Photo)</div>
    </div>
    <div class="form-group">
        <label>Email:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.Email)</div>
    </div>
    <div class="form-group">
        <label>Ghi chú:</label>
        @Html.TextBoxFor(m => m.Notes, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.Notes)</div>
    </div>
    <div class="form-group">
        <label>Password:</label>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.Password)</div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Employee/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>


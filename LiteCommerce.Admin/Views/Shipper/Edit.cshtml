@model LiteCommerce.DomainModels.Shipper

<form method="post" action="~/Shipper/Save">
    <div class="text-danger form-group">
        @Html.ValidationSummary()
    </div>
    @Html.HiddenFor(m => m.ShipperID)
    <div class="form-group">
        <label>Tên nhà vận chuyển:</label>
        @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.ShipperName)</div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @autofocus = "autofocus" })
                <div class="text-danger">@Html.ValidationMessageFor(m => m.Phone)</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Shipper/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>

